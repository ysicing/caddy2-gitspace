{
	admin localhost:2019
	persist_config off

	# 日志配置
	log {
		output stdout
		format json
		level INFO
	}

	# 阿里云 DNS API 配置（用于 DNS-01 验证）
	acme_dns alidns {
		access_key_id {$ALICLOUD_ACCESS_KEY}
		access_key_secret {$ALICLOUD_SECRET_KEY}
	}
}

# HTTPS 服务（通配符证书）
*.{$BASE_DOMAIN} {
	# TLS 配置（使用阿里云 DNS 验证）
	tls {
		dns alidns {
			access_key_id {$ALICLOUD_ACCESS_KEY}
			access_key_secret {$ALICLOUD_SECRET_KEY}
		}
	}

	# K8s 路由插件
	k8s_router {
		namespace {$K8S_NAMESPACE}
		base_domain {$BASE_DOMAIN}
		default_port {$DEFAULT_PORT}
	}

	# 健康检查端点（用于 Kubernetes 探针）
	handle /healthz {
		respond "OK" 200
	}

	# 日志记录
	log {
		output stdout
		format json
	}
}

